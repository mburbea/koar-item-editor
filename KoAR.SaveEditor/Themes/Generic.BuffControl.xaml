<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:KoAR.SaveEditor.Views">
    <Style TargetType="{x:Type views:BuffControl}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:BuffControl}">
                    <StackPanel Orientation="Horizontal">
                        <views:BuffIcon Buff="{TemplateBinding Buff}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Buff.Name, RelativeSource={RelativeSource TemplatedParent}}" Margin="2,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>