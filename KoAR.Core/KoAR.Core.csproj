<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProductVersion>8.0.30703</ProductVersion>
    <ProjectGuid>{F204356A-6213-4B0C-A35C-03DA5CE5AC21}</ProjectGuid>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyTitle>KoAR Item Editor</AssemblyTitle>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Description>Allows editing of items in KoAR saves.</Description>
    <LangVersion>10.0</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
      <Version Condition=" '$(BUILD_BUILDID)' == '' ">3.0.0</Version>
      <Version Condition=" '$(BUILD_BUILDID)' != '' ">3.0.$(BUILD_BUILDID)</Version>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
    <DocumentationFile></DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition="'$(BUILD_BUILDID)' == '' ">
    <Version>3.0.0</Version>
  </PropertyGroup>
  <PropertyGroup Condition="'$(BUILD_BUILDID)' != '' ">
    <Version>3.0.$(BUILD_BUILDID)</Version>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Data.zip" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Data.zip" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="DotNetZip" Version="1.16.0" />
    <PackageReference Include="StringLiteralGenerator" Version="1.1.0" />
    <PackageReference Include="System.IO.Hashing" Version="6.0.0" />
  </ItemGroup>
  <ItemGroup>
    <MySourceFiles Include="$(MSBuildProjectDirectory)\Data\*.*" />
  </ItemGroup>
  <Target Name="CopyToOut" BeforeTargets="BeforeBuild">
      <Copy SourceFiles="@(MySourceFiles)" DestinationFolder="$(OutDir)\Data" />
      <WriteLinesToFile File="$(OutDir)\Data\simtype.csv" Lines="" Overwrite="True" Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU'" />
      <ZipDirectory SourceDirectory="$(OutDir)\Data" DestinationFile="$(MSBuildProjectDirectory)\Data.zip" Overwrite="True" />
  </Target>
  <Target Name="CleanUp" AfterTargets="Build">
    <RemoveDir Directories="$(OutDir)\Data" />
    <WriteLinesToFile File="$(MSBuildProjectDirectory)\Data.zip" Lines="" Overwrite="True" />
  </Target>
</Project>